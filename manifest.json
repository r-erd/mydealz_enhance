{
    "manifest_version": 3,
    "name": "mydealz enhanced",
    "description": "Remove visual clutter and unnecessary information from mydealz.",
    "background": {
        "service_worker": "background.js"
    },
    "version": "0.9",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.mydealz.de/*"
            ],
            "exclude_matches": [
                "https://www.mydealz.de/deals/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_title": "Click to open options",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png"
        }
    }
}