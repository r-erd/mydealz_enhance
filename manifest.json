{
    "manifest_version": 3,
    "name": "mydealz enhanced",
    "description": "Remove visual clutter and unnecessary information from mydealz.",
    "background": {
        "service_worker": "background.js"
    },
    "version": "1.01",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.mydealz.de/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": "Click to filter",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png"
        }
    }
}