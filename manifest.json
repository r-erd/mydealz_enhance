{
    "manifest_version": 3,
    "name": "mydealz_enhanced",
    "description": "Filtere Deals basierend auf Stichw√∂rtern, verstecke Dealbilder, Dealtextvorschau uvm.",
    "background": {
        "service_worker": "background.js"
    },
    "version": "0.92",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.mydealz.de/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_title": "mydealz_enhance Optionen",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png"
        }
    }
}